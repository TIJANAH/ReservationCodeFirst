@model MyReservations.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="title-font color position">@ViewData["Title"]</h1>
<style>
    .color {
        color: white;
    }

    .position {
        margin-top: 90px;
    }


    .down {
        margin-right: 400px;
    }

    .error-message {
        color: red;
    }
</style>
@using (Html.BeginForm())
{

    <div class="form-group title-font">
        @Html.LabelFor(m => m.FirstName, null, new { @class = "control-label color" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "error-message" })
    </div>
    <div class="form-group title-font">
        @Html.LabelFor(m => m.LastName, null, new { @class = "control-label color" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "error-message" })
    </div>

    <div class="form-group title-font">
        @Html.LabelFor(m => m.Username, null, new { @class = "control-label color" })
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error-message" })
    </div>


    <div class="form-group title-font">
        @Html.LabelFor(m => m.Email, null, new { @class = "control-label color" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error-message" })
    </div>

    <div class="form-group title-font">
        @Html.LabelFor(m => m.Password, null, new { @class = "control-label color" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error-message" })
    </div>

    <div class="form-group title-font">
        @Html.LabelFor(m => m.RepeatPassword, null, new { @class = "control-label color" })
        @Html.PasswordFor(m => m.RepeatPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @class = "error-message" })
    </div>

    <button type="submit" class="register-button font btn btn-secondary down">Register</button>
    <a href="@Url.Action("Login", "Account")" class="btn btn-secondary position down">Already have an account? Log in Here</a>
}