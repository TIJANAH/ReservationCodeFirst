@model MyReservations.Models.Restaurant

<h2>Delete</h2>
<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>Event Name: @Model.RestaurantName</h4>
    <h4>Event Description: @Model.RestaurantDesc</h4>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.RestaurantId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Restaurant" asp-action="Index" class="btn btn-primary">Back to List</a>
</form>
