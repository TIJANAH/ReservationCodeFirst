@{
    ViewData["Title"] = "Attractions Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/ReservationTypes.css" rel="stylesheet" />
    <link href="~/images.png" rel="stylesheet" />
    <style>

        body {
            background-image: url('images/planina.jpg');
            background-size: cover;
        }

        p {
            font-size: 40px;
            color: white;
        }

        .custom-btn {
            background-color: black;
            margin-bottom: 0px;
            color: white;
        }

            .custom-btn:hover {
                background-color: white;
                border-color: white;
                color: black;
                font-weight: bold;
            }

        .action-button {
            display: inline-block;
            margin-right: 10px; /* Adjust as needed */
        }

        .create-button{
            margin-top: 50px;
            margin-right: -1700px;
            color: white;
        }
    </style>
</head>
<body>

   
        <a href="@Url.Action("Create", "Attraction")" class="create-button">
            <i class="bi bi-plus-square"></i>
        </a>

    <div class="text-center-attraction">
        <h1 class="display-4-attraction">WELCOME TO THE</h1>
        <p>@ViewData["Title"]</p>
    </div>

    

    <div class="container" style="margin-top:50px">
        <div class="row">
            @foreach (var res in Model)
            {
                <div class="col-sm-4 mt-3">
                    <div class="card">
                        <!-- Edit and Delete buttons -->
                        <div class="card-body">
                            <a href="@Url.Action("Edit", "Attraction", new { id = res.AttractionsId })" class="action-button">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Attraction", new { id = res.AttractionsId })">
                                <i class="bi bi-trash3"></i>
                            </a>
                        </div>

                        <input type="hidden" value="@res.AttractionsId" />
                        <a href="@Url.Action("DetailA", "Attraction", new { id = res.AttractionsId })">
                            <img src="@res.AttractionsImages" class="card-img-top test3" alt="...">
                        </a>
                        <p class="btn btn-primary custom-btn">
                            @res.AttractionsName
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>

</body>
</html>
