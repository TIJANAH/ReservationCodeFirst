@model MyReservations.Models.Event

<h2>Delete</h2>
<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>Event Name: @Model.EventName</h4>
    <h4>Event Description: @Model.EventDesc</h4>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.EventId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Event" asp-action="Index" class="btn btn-primary">Back to List</a>
</form>
